{
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        },
        "fish": {
            "path": "fish",
            "args": [
                "--interactive"
            ]
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.osx": "fish",
    "editor.fontFamily": "'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.tabSize": 2,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.fontLigatures": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        120
    ],
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "git.autofetch": true,
    "workbench.startupEditor": "newUntitledFile",
    "python.languageServer": "Pylance",
    "python.envFile": "${workspaceFolder}/.env",
    "extensions.ignoreRecommendations": true,
    "redhat.telemetry.enabled": false,
    // "go.toolsManagement.autoUpdate": true,
    "terminal.integrated.scrollback": 10000,
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": ".github/workflows/**.yml"
    },
    "git.confirmSync": false,
    "editor.bracketPairColorization.enabled": true,
    // "workbench.colorTheme": "Catppuccin Mocha",
    "window.commandCenter": false,
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "update.mode": "none",
    "workbench.editor.showTabs": "single",
    "git.ignoreRebaseWarning": true,
    // "github.copilot.enable": {
    //     "*": true,
    //     "plaintext": false,
    //     "markdown": false,
    //     "scminput": false
    // },
    "vs-kubernetes": {
        "vs-kubernetes.crd-code-completion": "enabled"
    },
    "[jsonc]": {
        "editor.formatOnSave": false
    },
    "files.associations": {
        "*.hujson": "jsonc",
    },
    "json.schemas": [
        {
            "fileMatch": [
                "*.hujson"
            ],
            "schema": {
                "allowTrailingCommas": true
            }
        }
    ],
    "[github-actions-workflow]": {
        "editor.tabSize": 1,
        "editor.formatOnSave": true
    },
    "[gitignore]": {
        "editor.formatOnSave": false
    },
    "[terraform]": {
        "editor.defaultFormatter": "gamunu.opentofu",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    "[terraform-vars]": {
        "editor.defaultFormatter": "gamunu.opentofu",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    "opentofu.languageServer.opentofu.path": "/opt/homebrew/bin/tofu",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "cmd": "terragrunt hclfmt --terragrunt-hclfmt-file ${file}",
                "isAsync": true,
                "match": ".hcl"
            }
        ]
    },
}
